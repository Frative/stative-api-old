// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Summoner {
  id String @id @map("_id")
  region String
  summonerId String
  accountId String
  puuid String
  name String
  profileIconId Int
  revisionDate Int
  summonerLevel Int
}

model Match {
  id String @id @map("_id")
  gameVersion String
  gameCreation Int
  gameDuration Int
  gameMode String
  participants MatchParticipant[]
}

type MatchParticipant {
  puuid String
  score Int
  championName String
  perks MatchParticipantPerks
}

type MatchParticipantPerks {
  statPerks StatPerks
  styles MatchParticipantPerksStyle[]
}

type StatPerks {
  defense Int
  flex Int
  offense Int
}

type MatchParticipantPerksStyle {
  description String
  selections MatchParticipantPerksStyleSelection[]
  style Int
}

type MatchParticipantPerksStyleSelection {
  perk Int
  var1 Int
  var2 Int
  var3 Int
}